'{c}
\end_layout

\end_inset

不等式.
\end_layout

\begin_layout Paragraph
Ex 2.
 (IMO - DataBase - 2008)
\end_layout

\begin_layout Standard
若
\begin_inset Formula $x,y,z\in\mathbb{R}$
\end_inset

, 使得
\begin_inset Formula $y+z$
\end_inset

, 
\begin_inset Formula $z+x$
\end_inset

, 
\begin_inset Formula $x+y$
\end_inset

和
\begin_inset Formula $yz+zx+xy$
\end_inset

均非负, 则有
\begin_inset Formula 
\[
\sum_{cyc}\sqrt{(z+x)(x+y)}\ge x+y+z+\sqrt{3(xy+yz+zx)}.
\]

\end_inset


\end_layout

\begin_layout Paragraph
pf
\end_layout

\begin_layout Standard
由Conway三角代换, 所证不等式相当于
\begin_inset Formula 
\[
\sum_{cyc}ab\ge\frac{1}{2}(a^{2}+b^{2}+c^{2})+2\sqrt{3}S.
\]

\end_inset

即
\begin_inset Formula 
\[
a^{2}+b^{2}+c^{2}\ge(a-b)^{2}+(b-c)^{2}+(c-a)^{2}+4\sqrt{3}S.
\]

\end_inset

即Hadwiger-Finsler不等式.
\end_layout

\begin_layout Subsubsection
Problems
\end_layout

\begin_layout Standard
设
\begin_inset Formula $x,y,z\in\mathbb{R}$
\end_inset

, 满足
\begin_inset Formula $x+y>0$
\end_inset

, 
\begin_inset Formula $y+z>0$
\end_inset

, 
\begin_inset Formula $z+x>0$
\end_inset

, 
\begin_inset Formula $xy+yz+zx>0$
\end_inset

, 证明以下命题
\end_layout

\begin_layout Standard
1.
 
\begin_inset Formula $\sum_{cyc}(x+y)\sqrt{(x+z)(y+z)}\ge4(xy+yz+zx)$
\end_inset

.
\end_layout

\begin_layout Standard
2.
 
\begin_inset Formula $(\sqrt{x+y}+\sqrt{y+z}+\sqrt{z+x})^{2}\geq6\sqrt{3(xy+yz+zx)}$
\end_inset

.
\end_layout

\begin_layout Standard
3.
 
\begin_inset Formula $2(\sqrt{x+y}+\sqrt{y+z}+\sqrt{z+x})\sqrt{xy+yz+zx}\leq3\sqrt{3(x+y)(y+z)(z+x)}$
\end_inset

.
\end_layout

\begin_layout Standard
4.
 
\begin_inset Formula $8(x+y+z)(xy+yz+zx)\leq9(x+y)(y+z)(z+x)$
\end_inset

.
\end_layout

\begin_layout Standard
5.
 
\begin_inset Formula $x+y+z\geq\sqrt{3(xy+yz+zx)}$
\end_inset

.
 
\end_layout

\begin_layout Standard
6.
 
\begin_inset Formula $\frac{1}{\sqrt{x+y}}+\frac{1}{\sqrt{y+z}}+\frac{1}{\sqrt{z+x}}\geq2\sqrt{\frac{3(xy+yz+zx)}{(x+y)(y+z)(z+x)}}$
\end_inset

.
 
\end_layout

\begin_layout Standard
7.
 
\begin_inset Formula $\frac{1}{\sqrt{x+y}}+\frac{1}{\sqrt{y+z}}+\frac{1}{\sqrt{z+x}}\leq\frac{\sqrt{3}(\sqrt{x+y}+\sqrt{y+z}+\sqrt{z+x})}{2\sqrt{xy+yz+zx}}$
\end_inset

.
 
\end_layout

\begin_layout Standard
8.
 
\begin_inset Formula $\frac{1}{\sqrt{(x+y)(x+z)}}+\frac{1}{\sqrt{(y+z)(y+x)}}+\frac{1}{\sqrt{(z+x)(z+y)}}\geq\frac{4(xy+yz+zx)}{(x+y)(y+z)(z+x)}$
\end_inset

.
 
\end_layout

\begin_layout Standard
9.
 
\begin_inset Formula $\frac{1}{\sqrt{(x+y)(x+z)}}+\frac{1}{\sqrt{(y+z)(y+x)}}+\frac{1}{\sqrt{(z+x)(z+y)}}\leq\frac{(\sqrt{x+y}+\sqrt{y+z}+\sqrt{z+x})^{2}}{4(xy+yz+zx)}$
\end_inset

.
 
\end_layout

\begin_layout Standard
10.
 
\begin_inset Formula $\frac{1}{x+y}+\frac{1}{y+z}+\frac{1}{z+x}\geq\frac{\sqrt{x+y}+\sqrt{y+z}+\sqrt{z+x}}{\sqrt{(x+y)(y+z)(z+x)}}$
\end_inset

.
 
\end_layout

\begin_layout Standard
11.
 
\begin_inset Formula $\frac{1}{x+y}+\frac{1}{y+z}+\frac{1}{z+x}\leq\frac{(\sqrt{x+y}+\sqrt{y+z}+\sqrt{z+x})^{2}}{4(xy+yz+zx)}$
\end_inset

.
 
\end_layout

\begin_layout Standard
12.
 
\begin_inset Formula $\sqrt{\frac{x+y}{x+z}}+\sqrt{\frac{x+z}{x+y}}\leq\frac{(\sqrt{x+y}+\sqrt{y+z}+\sqrt{z+x})\sqrt{(x+y)(y+z)(z+x)}}{2(xy+yz+zx)}$
\end_inset

.
 
\end_layout

\begin_layout Standard
13.
 
\begin_inset Formula $(x+y+z)(\sqrt{x+y}+\sqrt{y+z}+\sqrt{z+x})^{2}\geq18(xy+yz+zx)$
\end_inset

.
 
\end_layout

\begin_layout Standard
14.
 
\begin_inset Formula $\sqrt{(x+y)(x+z)}+\sqrt{(y+z)(y+x)}+\sqrt{(z+x)(z+y)}\geq\frac{36(xy+yz+zx)}{(\sqrt{x+y}+\sqrt{y+z}+\sqrt{z+x})^{2}}$
\end_inset

.
 
\end_layout

\begin_layout Standard
15.
 
\begin_inset Formula $\sqrt{(x+y)(x+z)}+\sqrt{(y+z)(y+x)}+\sqrt{(z+x)(z+y)}\leq\frac{9(x+y)(y+z)(z+x)}{4(xy+yz+zx)}$
\end_inset

.
 
\end_layout

\begin_layout Standard
16.
 
\begin_inset Formula $\sqrt{(x+y)(x+z)}+\sqrt{(y+z)(y+x)}+\sqrt{(z+x)(z+y)}\geq2\sqrt{3(xy+yz+zx)}$
\end_inset

.
\end_layout

\begin_layout Standard
17.
 
\begin_inset Formula $x^{2}+y^{2}+z^{2}\geq xy+yz+zx$
\end_inset

.
 
\end_layout

\begin_layout Standard
18.
 
\begin_inset Formula $(x+y)(x+z)+(y+z)(y+x)+(z+x)(z+y)\geq4(xy+yz+zx)$
\end_inset

.
 
\end_layout

\begin_layout Standard
19.
 
\begin_inset Formula $\frac{9\sqrt{(x+y)(y+z)(z+x)}}{\sqrt{x+y}+\sqrt{y+z}+\sqrt{z+x}}\geq2\sqrt{3(xy+yz+zx)}$
\end_inset

.
 
\end_layout

\begin_layout Standard
20.
 
\begin_inset Formula $\sqrt{3}(\sqrt{x+y}+\sqrt{y+z}+\sqrt{z+x})\leq4\sqrt{\frac{(x+y)(y+z)(z+x)}{xy+yz+zx}}+\frac{2\sqrt{xy+yz+zx}}{\sqrt{x+y}+\sqrt{y+z}+\sqrt{z+x}}$
\end_inset

.
 
\end_layout

\begin_layout Standard
21.
 
\begin_inset Formula $\sqrt{x+\frac{y+z}{4}}+\sqrt{y+\frac{z+x}{4}}+\sqrt{z+\frac{x+y}{4}}\geq\frac{9\sqrt{xy+yz+zx}}{\sqrt{x+y}+\sqrt{y+z}+\sqrt{z+x}}$
\end_inset

.
 
\end_layout

\begin_layout Standard
22.
 
\begin_inset Formula $\sqrt{x+\frac{y+z}{4}}+\sqrt{y+\frac{z+x}{4}}+\sqrt{z+\frac{x+y}{4}}\leq\frac{9\sqrt{(x+y)(y+z)(z+x)}}{4\sqrt{xy+yz+zx}}$
\end_inset

.
 
\end_layout

\begin_layout Standard
23.
 
\begin_inset Formula $\frac{3\sqrt{xy+yz+zx}}{\sqrt{x+y}+\sqrt{y+z}+\sqrt{z+x}}\leq\sqrt[4]{\frac{3}{4}(xy+yz+zx)}$
\end_inset

.
\end_layout

