\begin_layout Theorem
设 
\begin_inset Formula $D\subseteq\RR$
\end_inset

,
 
\begin_inset Formula $D'$
\end_inset

 为 
\begin_inset Formula $D$
\end_inset

 的导集,
 且 
\begin_inset Formula $D'\cap D$
\end_inset

 至少有两个元素,
 函数空间
\begin_inset Formula 
\[
A_{x_{0},D}=\left\{ f:D\to\RR:\left(\forall\left\{ x_{n}\right\} \subseteq D,\ x_{0}\in D'\cap D,\ \limsup\limits_{n\to\infty}x_{n}=x_{0}\right)\Longrightarrow\limsup\limits_{n\to\infty}f(x_{n})=f(x_{0})\right\} ,
\]

\end_inset

则 
\begin_inset Formula $f\in A_{x_{0},D}$
\end_inset

 在 
\begin_inset Formula $D'\cap D$
\end_inset

 上为不减函数.
\end_layout

\begin_layout Proof
假设 
\begin_inset Formula $x_{1},x_{2}\in D'\cap D$
\end_inset

,
 
\begin_inset Formula $x_{1}<x_{2}$
\end_inset

,
 但 
\begin_inset Formula $f(x_{1})>f(x_{2})$
\end_inset

,
 取序列 
\begin_inset Formula 
\[
y_{n}=\begin{cases}
x_{1}, & n\text{ odd},\\
x_{2}, & n\text{ even}.
\end{cases}
\]

\end_inset

则 
\begin_inset Formula $\limsup\limits_{n\to\infty}y_{n}=x_{2}$
\end_inset

,
 所以
\begin_inset Formula 
\[
\limsup_{n\to\infty}f(y_{n})=f(x_{1})\ne f(x_{2})=f\left(\limsup_{n\to\infty}y_{n}\right).
\]

\end_inset


\end_layout

\begin_layout Corollary
设 
\begin_inset Formula $f$
\end_inset

 是定义在 
\begin_inset Formula $[a,b]$
\end_inset

 上的函数,
 若对于任意的 
\begin_inset Formula $\left\{ x_{n}\right\} \subseteq[a,b]$
\end_inset

,
 
\begin_inset Formula $x_{0}\in[a,b]$
\end_inset

,
 满足 
\begin_inset Formula $\limsup\limits_{n\to\infty}x_{n}=x_{0}$
\end_inset

,
 总有 
\begin_inset Formula 
\[
\limsup_{n\to\infty}f(x_{n})=f(x_{0}),
\]

\end_inset

则 
\begin_inset Formula $f$
\end_inset

 是定义在 
\begin_inset Formula $[a,b]$
\end_inset

 上的连续不减函数.
\end_layout

