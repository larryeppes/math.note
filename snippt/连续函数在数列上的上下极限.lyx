\begin_layout Theorem
设 
\begin_inset Formula $D\subseteq\RR$
\end_inset

,
 
\begin_inset Formula $x_{0}\in D$
\end_inset

 为 
\begin_inset Formula $D$
\end_inset

 的聚点,
 函数空间
\begin_inset Formula 
\[
A_{x_{0},D}=\left\{ f:D\to\RR:\left(\forall\left\{ x_{n}\right\} \subseteq D,\ \limsup\limits_{n\to\infty}x_{n}=x_{0}\right)\Longrightarrow\limsup\limits_{n\to\infty}f(x_{n})=f(x_{0})\right\} ,
\]

\end_inset

则 
\begin_inset Formula $f\in A_{x_{0},D}$
\end_inset

 在点 
\begin_inset Formula $x_{0}$
\end_inset

 处连续,
 从而
\begin_inset Formula 
\[
\limsup_{n\to\infty}f(x_{n})=\liminf_{n\to\infty}f(x_{n})=\lim_{n\to\infty}f(x_{n})=f(x_{0}).
\]

\end_inset


\end_layout

\begin_layout Proof
设 
\begin_inset Formula $f$
\end_inset

 在点 
\begin_inset Formula $x_{0}$
\end_inset

 处不连续,
 则存在 
\begin_inset Formula $\epsilon_{0}>0$
\end_inset

,
 使得对于任意的 
\begin_inset Formula $\delta>0$
\end_inset

,
 存在 
\begin_inset Formula $x\in D$
\end_inset

 满足 
\begin_inset Formula $\left|x-x_{0}\right|<\delta$
\end_inset

,
 使得
\begin_inset Formula 
\[
\left|f(x)-f(x_{0})\right|>\epsilon_{0}.
\]

\end_inset

依次取 
\begin_inset Formula $\delta=\frac{1}{n}$
\end_inset

,
 则得到序列 
\begin_inset Formula $\left\{ x_{n}\right\} $
\end_inset

 满足 
\begin_inset Formula $x_{n}\to x_{0}$
\end_inset

 以及 
\begin_inset Formula $\left|f(x_{n})-f(x_{0})\right|>\epsilon_{0}$
\end_inset

,
 而这与
\begin_inset Formula 
\[
\limsup_{n\to\infty}f(x_{n})=f(x_{0})
\]

\end_inset

矛盾.
\end_layout

