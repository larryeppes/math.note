\begin_inset Formula $x_{n}=\sin x_{n-1}$
\end_inset

, 
\begin_inset Formula $n=1,2,\cdots$
\end_inset

.
 求证:
\end_layout

\begin_layout Standard
(1) 
\begin_inset Formula $\lim_{n\to\infty}x_{n}=0$
\end_inset

;
\end_layout

\begin_layout Standard
(2) 
\begin_inset Formula $\lim_{n\to\infty}\sqrt{\frac{n}{3}}x_{n}=1$
\end_inset

.
\end_layout

