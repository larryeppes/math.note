\begin_body

\begin_layout Section
Biot-Savart law
\end_layout

\begin_layout Theorem
(Biot-Savart law) 设
\begin_inset Formula $w\neq\nabla\times u=\mathrm{Curl}u$
\end_inset

, 
\begin_inset Formula $u=(u_{1},u_{2})$
\end_inset

, 
\begin_inset Formula $\mathrm{div}u=0$
\end_inset

, 
\begin_inset Formula $u=u(x,y)$
\end_inset

, 则
\begin_inset Formula 
\[
u=\nabla^{\perp}(\Delta^{-1})w,\qquad\nabla^{\perp}=(-\partial_{2},\partial_{1}).
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Section
Banach-Alaoglu定理
\end_layout

\begin_layout Theorem
设
\begin_inset Formula $X$
\end_inset

为某个可分Banach空间
\begin_inset Formula $Z$
\end_inset

的对偶空间, 即
\begin_inset Formula $X=Z^{*}$
\end_inset

, 则
\begin_inset Formula $X$
\end_inset

中的弱*拓扑中的任何有界子集
\begin_inset Formula $M$
\end_inset

准紧, 即
\begin_inset Formula $M$
\end_inset

中的任何序列有弱*收敛子列.
\end_layout

\begin_layout Proof
设
\begin_inset Formula $\left(x_{k}\right)_{k\in\NN}$
\end_inset

为
\begin_inset Formula $X$
\end_inset

中的有界序列, 因
\begin_inset Formula $Z$
\end_inset

可分, 存在序列
\begin_inset Formula $\left\{ z_{j}\right\} _{j\in\NN}$
\end_inset

在
\begin_inset Formula $Z$
\end_inset

中稠密.
\end_layout

\begin_layout Proof
注意到, 由
\begin_inset Formula $\left(x_{k}\right)_{k\in\NN}$
\end_inset

的有界性
\begin_inset Formula 
\[
\left|\left\langle x_{k},z_{j}\right\rangle \right|\le\norm{x_{k}}_{X}\cdot\norm{z_{j}}_{Z}\le c\cdot\norm{z_{j}}.
\]

\end_inset

故, 对于固定的
\begin_inset Formula $j$
\end_inset

, 序列
\begin_inset Formula $b_{k}=\left\langle x_{k},z_{j}\right\rangle $
\end_inset

为有界实数列, 从而有收敛子列.
\end_layout

\begin_layout Proof
现在递归的取子列
\begin_inset Formula $\Lambda_{n}$
\end_inset

满足:
\begin_inset Formula 
\[
\NN\supseteq\Lambda_{1}\supseteq\Lambda_{2}\supseteq\Lambda_{3}\supseteq\cdots
\]

\end_inset

使
\begin_inset Formula 
\[
\left\langle x_{k},z_{j}\right\rangle \to a_{j},\qquad k\in\Lambda_{j},\ k\to\infty.
\]

\end_inset

从
\begin_inset Formula $\Lambda_{n}$
\end_inset

中取出第
\begin_inset Formula $n$
\end_inset

个元素构成指标集
\begin_inset Formula $\Lambda$
\end_inset

, 则
\begin_inset Formula $\forall j\in\NN$
\end_inset

有
\begin_inset Formula 
\[
\left\langle x_{k},z_{j}\right\rangle \to a_{j},\qquad k\in\Lambda,\ k\to\infty.
\]

\end_inset


\end_layout

\begin_layout Proof
在
\begin_inset Formula $\mathrm{span}\left\{ z_{j}\right\} _{j\in\NN}$
\end_inset

上定义线性泛函
\begin_inset Formula 
\[
x(z_{j})\coloneqq a_{j},\qquad x\left(\sum_{j=1}^{N}c_{j}z_{j}\right)\coloneqq\sum_{j=1}^{N}c_{j}a_{j},
\]

\end_inset

则对于
\begin_inset Formula $z=\sum_{j=1}^{N}c_{j}z_{j}$
\end_inset

, 有
\begin_inset Formula 
\[
x(z)=\sum_{j=1}^{N}c_{j}a_{j}=\lim_{k\to\infty,k\in\Lambda}\sum_{j=1}^{N}c_{j}\left\langle x_{k},z_{j}\right\rangle =\lim_{k\to\infty,k\in\Lambda}\left\langle x_{k},\sum_{j=1}^{N}c_{j}z_{j}\right\rangle =\lim_{k\to\infty,k\in\Lambda}\left\langle x_{k},z\right\rangle .
\]

\end_inset


\end_layout

\begin_layout Proof
从而
\begin_inset Formula $\left|x(z)\right|\le c\norm{z}$
\end_inset

, 即
\begin_inset Formula $x$
\end_inset

是有界线性泛函.
\end_layout

\begin_layout Proof
由于
\begin_inset Formula $\left\{ z_{j}\right\} _{j\in\NN}$
\end_inset

在
\begin_inset Formula $Z$
\end_inset

中稠密, 故
\begin_inset Formula $x$
\end_inset

可延拓为
\begin_inset Formula $Z$
\end_inset

上的有解线性泛函, 即
\begin_inset Formula $x\in Z^{*}=X$
\end_inset

.
 
\end_layout

\begin_layout Proof
现在, 对于任何
\begin_inset Formula $z\in Z$
\end_inset

, 记
\begin_inset Formula $\left\langle x,z\right\rangle =x(z)$
\end_inset

, 从而有
\begin_inset Formula $\norm{x}\le c$
\end_inset

.
 
\end_layout

\begin_layout Proof
以下证明
\begin_inset Formula $x_{k}\wcs x$
\end_inset

: 取
\begin_inset Formula $z\in Z$
\end_inset

, 由
\begin_inset Formula $\left\{ z_{j}\right\} _{j\in\NN}$
\end_inset

在
\begin_inset Formula $Z$
\end_inset

中稠密, 则存在指标集
\begin_inset Formula $I\subseteq\NN$
\end_inset

, 使得
\begin_inset Formula 
\[
\norm{z-z_{j}}\to0,\quad j\in I,\ j\to\infty.
\]

\end_inset


\end_layout

\begin_layout Proof
并考虑
\begin_inset Formula 
\begin{align*}
\left|\left\langle x_{k}-x,z\right\rangle \right| & =\left|\left\langle x_{k}-x,z-z_{j}\right\rangle +\left\langle x_{k}-x,z_{j}\right\rangle \right|\\
 & \le\norm{x_{k}-x}\cdot\norm{z-z_{j}}+\left|\left\langle x_{k}-x,z_{j}\right\rangle \right|\\
 & \le2c\cdot\norm{z-z_{j}}+\left|\left\langle x_{k}-x,z_{j}\right\rangle \right|.
\end{align*}

\end_inset

先固定
\begin_inset Formula $j$
\end_inset

, 让
\begin_inset Formula $k\in\Lambda$
\end_inset

, 且
\begin_inset Formula $k\to\infty$
\end_inset

, 则
\begin_inset Formula 
\[
\limsup_{k\to\infty,k\in\Lambda}\left|\left\langle x_{k}-x,z\right\rangle \right|\le2c\cdot\norm{z-z_{j}}.
\]

\end_inset

再让
\begin_inset Formula $j\to\infty$
\end_inset

, 
\begin_inset Formula $j\in I$
\end_inset

, 则有
\begin_inset Formula 
\[
\limsup_{k\to\infty,k\in\Lambda}\left|\left\langle x_{k}-x,z\right\rangle \right|=0.
\]

\end_inset

即
\begin_inset Formula 
\[
\lim_{k\to\infty,k\in\Lambda}\left\langle x_{k},z\right\rangle =\left\langle x,z\right\rangle ,\qquad\forall z\in Z.
\]

\end_inset


\end_layout

\begin_layout Section
\begin_inset Formula $L^{0}$
\end_inset

, 依测度收敛, 一致可积, Vitali收敛定理, de la Vall
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
'{e}
\end_layout

\end_inset

e-Poussin判别法
\end_layout

\begin_layout Subsection
可测空间
\end_layout

\begin_layout Standard
设
\begin_inset Formula $\overline{\RR}=\RR\cup\left\{ -\infty,\infty\right\} $
\end_inset

, 带有序拓扑, 
\begin_inset Formula $\RR$
\end_inset

上有Borel 
\begin_inset Formula $\sigma$
\end_inset

-代数.
\end_layout

\begin_layout Standard
若
\begin_inset Formula $E\subseteq\overline{\RR}$
\end_inset

, 则
\begin_inset Formula $E\in\mathscr{B}_{\overline{R}}$
\end_inset

当且仅当
\begin_inset Formula $E\setminus\left\{ -\infty,\infty\right\} \in\mathscr{B}_{\RR}$
\end_inset

.
\end_layout

\begin_layout Theorem
设
\begin_inset Formula $(\Omega,\Sigma)$
\end_inset

为可测空间, 若
\begin_inset Formula $\left(f_{j}\right)$
\end_inset

为一列可测函数, 
\begin_inset Formula $f_{j}:\Omega\to\overline{\RR}$
\end_inset

, 则对于任意的
\begin_inset Formula $k\in\NN$
\end_inset

, 
\begin_inset Formula 
\[
g_{k}(x)=\sup_{j\ge k}f_{j}(x),\qquad h_{k}(x)=\inf_{j\ge k}f_{j}(x)
\]

\end_inset

为
\begin_inset Formula $\Omega\to\overline{\RR}$
\end_inset

的可测函数, 且
\begin_inset Formula 
\[
g(x)=\limsup_{j\to\infty}f_{j}(x),\qquad h(x)=\liminf_{j\to\infty}f_{j}(x)
\]

\end_inset

为
\begin_inset Formula $\Omega\to\overline{\RR}$
\end_inset

的可测函数.
\end_layout

\begin_layout Proof
设
\begin_inset Formula $a\in\RR$
\end_inset

, 则
\begin_inset Formula 
\[
\left\{ x:\sup_{j\ge k}f_{j}(x)>a\right\} =\bigcup_{j=k}^{\infty}f_{j}^{-1}(a,\infty].
\]

\end_inset

即依次证明:
\end_layout

\begin_layout Proof
\begin_inset Formula 
\[
\bigcup_{j=k}^{\infty}f_{j}^{-1}(a,\infty]\subseteq\left\{ x:\sup_{j\ge k}f_{j}(x)>a\right\} ;
\]

\end_inset


\begin_inset Formula 
\[
y\not\in\bigcup_{j\ge k}^{\infty}f_{j}^{-1}(a,\infty]\Longrightarrow y\not\in\left\{ x:\sup_{j\ge k}f_{j}(x)>a\right\} .
\]

\end_inset

故有
\begin_inset Formula $g_{k}^{-1}(a,\infty]\in\Sigma$
\end_inset

, 注意
\begin_inset Formula $\mathscr{B}_{\overline{\RR}}$
\end_inset

是由集族
\begin_inset Formula 
\[
\left\{ (a,\infty]:a\in\RR\right\} 
\]

\end_inset

生成的.
\end_layout

\begin_layout Proof
注意到
\begin_inset Formula 
\[
h_{k}(x)=-\sup_{j\ge k}(-f_{j}(x)),
\]

\end_inset

故
\begin_inset Formula $h_{k}(x)$
\end_inset

也可测.
\end_layout

\begin_layout Proof
由于
\begin_inset Formula 
\[
g(x)=\inf_{k\ge1}g_{k}(x),\quad h(x)=\sup_{k\ge1}h_{k}(x).
\]

\end_inset

而
\begin_inset Formula $g_{k},h_{k}$
\end_inset

可测, 故
\begin_inset Formula $g,h$
\end_inset

可测.
\end_layout

\begin_layout Subsection
依测度收敛
\end_layout

\begin_layout Standard
设
\begin_inset Formula $(\Omega,\Sigma,\mu)$
\end_inset

为概率空间, 
\begin_inset Formula $L^{0}(\mu)$
\end_inset

为所有
\begin_inset Formula $\Omega\to\CC$
\end_inset

的可测函数的等价类形成的集族, 其中
\begin_inset Formula $\CC$
\end_inset

有Borel 
\begin_inset Formula $\sigma$
\end_inset

-代数.
 两个函数
\begin_inset Formula $f$
\end_inset

和
\begin_inset Formula $g$
\end_inset

等价, 若
\begin_inset Formula 
\[
\mu\left\{ x\in\Omega:f(x)\ne g(x)\right\} =0.
\]

\end_inset

则
\begin_inset Formula $L^{0}(\mu)$
\end_inset

是一个向量空间, 对于
\begin_inset Formula $f,g\in L^{0}(\mu)$
\end_inset

, 定义
\begin_inset Formula 
\[
\rho(f,g)=\int_{\Omega}\frac{\left|f-g\right|}{1+\left|f-g\right|}\ud\mu
\]

\end_inset

是
\begin_inset Formula $L^{0}(\mu)$
\end_inset

上的度量.
 在此度量下, 
\begin_inset Formula $L^{0}(\mu)$
\end_inset

形成一个拓扑向量空间, 有
\begin_inset Formula $\rho$
\end_inset

诱导的拓扑称为依测度收敛拓扑.
\end_layout

\begin_layout Theorem
假设
\begin_inset Formula $\left(f_{n}\right)\subseteq L^{0}(\mu)$
\end_inset

, 在依测度收敛拓扑意义下, 
\begin_inset Formula $f_{n}\to0$
\end_inset

, 当且仅当, 对于任意的
\begin_inset Formula $\epsilon>0$
\end_inset

, 
\begin_inset Formula 
\[
\lim_{n\to\infty}\mu\left(\left\{ x\in\Omega:\left|f_{n}\right|\ge\epsilon\right\} \right)=0.
\]

\end_inset


\end_layout

\begin_layout Proof
\begin_inset Formula $\Longrightarrow$
\end_inset

: 对于任意固定的
\begin_inset Formula $\epsilon>0$
\end_inset

, 取
\begin_inset Formula 
\[
A_{n}=\left\{ x\in\Omega:\left|f_{n}(x)\right|\ge\epsilon\right\} =\left\{ x\in\Omega:\frac{\left|f_{n}(x)\right|}{1+\left|f_{n}(x)\right|}\ge\frac{\epsilon}{1+\epsilon}\right\} ,
\]

\end_inset

则
\begin_inset Formula 
\[
\int_{\Omega}\frac{\epsilon}{1+\epsilon}\chi_{A_{n}}\ud\mu\le\int_{\Omega}\frac{\left|f_{n}\right|}{1+\left|f_{n}\right|}\ud\mu=\rho(f_{n},0).
\]

\end_inset

即
\begin_inset Formula 
\[
\mu(A_{n})\le\frac{1+\epsilon}{\epsilon}\rho(f_{n},0)\to0,\quad n\to\infty.
\]

\end_inset


\end_layout

\begin_layout Proof
\begin_inset Formula $\Longleftarrow$
\end_inset

: 设
\begin_inset Formula $\epsilon>0$
\end_inset

, 假设
\begin_inset Formula $\mu(A_{n})\to0$
\end_inset

, 
\begin_inset Formula $n\to\infty$
\end_inset

.
 则有
\begin_inset Formula $n_{\epsilon}$
\end_inset

, 使得对于任意的
\begin_inset Formula $n\ge n_{\epsilon}$
\end_inset

有
\begin_inset Formula $\mu(A_{n})<\epsilon$
\end_inset

, 从而
\begin_inset Formula 
\begin{align*}
\rho(f_{n},0) & =\int_{A_{n}}\frac{\left|f_{n}\right|}{1+\left|f_{n}\right|}\ud\mu+\int_{\Omega\setminus A_{n}}\frac{\left|f_{n}\right|}{1+\left|f_{n}\right|}\ud\mu\\
 & \le\int_{A_{n}}1\ud\mu+\int_{\Omega\setminus A_{n}}\frac{\epsilon}{1+\epsilon}\ud\mu\\
 & \le\epsilon+\frac{\epsilon}{1+\epsilon}<2\epsilon.
\end{align*}

\end_inset

故在依测度收敛拓扑意义下, 
\begin_inset Formula $f_{n}\to0$
\end_inset

.
\end_layout

\begin_layout Theorem
假设
\begin_inset Formula $\left(f_{n}\right)\subseteq L^{0}(\mu)$
\end_inset

, 有
\begin_inset Formula 
\[
\lim_{n\to\infty}f_{n}(x)\to0,\quad a.e.\ x\in\Omega.
\]

\end_inset

则在依测度收敛意义下, 
\begin_inset Formula $f_{n}\to0$
\end_inset

.
\end_layout

\begin_layout Proof
对于任意固定的
\begin_inset Formula $\epsilon>0$
\end_inset

, 取任意的
\begin_inset Formula $\eta>0$
\end_inset

.
 由Egorov定理, 存在
\begin_inset Formula $E\in\Sigma$
\end_inset

, 
\begin_inset Formula $\mu(E)<\eta$
\end_inset

, 使得在
\begin_inset Formula $\Omega\setminus E$
\end_inset

上有
\begin_inset Formula 
\[
f_{n}\rightrightarrows0,\quad n\to\infty.
\]

\end_inset


\end_layout

\begin_layout Proof
故存在
\begin_inset Formula $n_{0}$
\end_inset

, 使得对于任意的
\begin_inset Formula $n\ge n_{0}$
\end_inset

, 
\begin_inset Formula $\forall x\in\Omega\setminus E$
\end_inset

, 有
\begin_inset Formula $\left|f_{n}(x)\right|<\epsilon$
\end_inset

, 从而对于任意的
\begin_inset Formula $n\ge n_{0}$
\end_inset

, 有
\begin_inset Formula 
\begin{align*}
\mu\left(\left\{ x\in\Omega:\left|f_{n}\right|\ge\epsilon\right\} \right) & \le\mu(E)+\mu\left(\left\{ x\in\Omega\setminus E:\left|f_{n}\right|\ge\epsilon\right\} \right)\\
 & =\mu(E)<\eta.
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Proof
用DCT以及定理 2.
\end_layout

\begin_layout Theorem
若
\begin_inset Formula $\left(f_{n}\right)\subseteq L^{1}(\mu)$
\end_inset

, 有
\begin_inset Formula $f_{n}\to0$
\end_inset

 in 
\begin_inset Formula $L^{1}(\mu)$
\end_inset

, 则
\begin_inset Formula $f_{n}$
\end_inset

依测度收敛于
\begin_inset Formula $0$
\end_inset

.
\end_layout

\begin_layout Proof
设
\begin_inset Formula $\epsilon>0$
\end_inset

, 
\begin_inset Formula 
\[
A_{n}=\left\{ x\in\Omega:\left|f_{n}\right|\ge\epsilon\right\} ,
\]

\end_inset

则Chebyshev不等式有
\begin_inset Formula 
\[
\mu(A_{n})\le\frac{1}{\epsilon}\norm{f_{n}}_{1}\to0,\quad n\to\infty.
\]

\end_inset


\end_layout

\begin_layout Theorem
设
\begin_inset Formula $\left(f_{n}\right)\subseteq L^{0}(\Omega)$
\end_inset

, 
\begin_inset Formula $f_{n}\tom0$
\end_inset

, 则有子列
\begin_inset Formula $\left(f_{n_{k}}\right)$
\end_inset

几乎处处收敛于
\begin_inset Formula $0$
\end_inset

.
\end_layout

\begin_layout Proof
对于任意的
\begin_inset Formula $k\in\NN$
\end_inset

, 取
\begin_inset Formula $n_{k}$
\end_inset

使得对于任意的
\begin_inset Formula $n\ge n_{k}$
\end_inset

, 有
\begin_inset Formula 
\[
\mu\left(\left\{ x\in\Omega:\left|f_{n}\right|\ge\frac{1}{k}\right\} \right)<\frac{1}{2^{n}}.
\]

\end_inset

取
\begin_inset Formula 
\[
E_{k}=\left\{ x\in\Omega:\left|f_{n_{k}}\right|\ge\frac{1}{k}\right\} ,
\]

\end_inset

则
\begin_inset Formula $\mu(E_{k})<\frac{1}{2^{k}}$
\end_inset

, 取
\begin_inset Formula 
\[
E=\bigcap_{k=1}^{\infty}\bigcup_{m=k}^{\infty}E_{m}=\limsup_{k\to\infty}E_{k},
\]

\end_inset

则
\begin_inset Formula 
\[
\mu(E)\le\mu\left(\bigcup_{m=k}^{\infty}E_{k}\right)\le\frac{1}{2^{k}}+\frac{1}{2^{k+1}}+\cdots=2^{1-k},\quad\forall k.
\]

\end_inset

即
\begin_inset Formula $\mu(E)=0$
\end_inset

.
\end_layout

\begin_layout Proof
若
\begin_inset Formula $x\in\Omega\setminus E$
\end_inset

, 则
\begin_inset Formula $x\in\cup_{k=1}^{\infty}\cap_{m=k}^{\infty}E_{m}^{c}$
\end_inset

, 故有
\begin_inset Formula $k_{0}$
\end_inset

, 使得
\begin_inset Formula $x\in\cap_{m=k_{0}}^{\infty}E_{m}^{c}$
\end_inset

, 即当
\begin_inset Formula $m\ge k_{0}$
\end_inset

时, 
\begin_inset Formula $x\not\in E_{m}$
\end_inset

, 即
\begin_inset Formula 
\[
\left|f_{n_{m}}(x)\right|<\frac{1}{m},\qquad f_{n_{m}}(x)\to0,\quad m\to\infty.
\]

\end_inset


\end_layout

\begin_layout Proof
\begin_inset Formula $\left(f_{n_{k}}\right)$
\end_inset

即为所求的子列.
\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Standard
下面证明
\begin_inset Formula $\rho$
\end_inset

是完备度量, 即
\begin_inset Formula $L^{0}(\mu)$
\end_inset

在此度量下是一个
\begin_inset Formula $F$
\end_inset

-空间.
\end_layout

\begin_layout Theorem
\begin_inset Formula $\rho$
\end_inset

是
\begin_inset Formula $L^{0}(\mu)$
\end_inset

上的完备度量, 即依测度基本列有依测度收敛子列.
\end_layout

\begin_layout Proof
假设
\begin_inset Formula $\left(f_{n}\right)\subseteq L^{0}(\mu)$
\end_inset

为Cauchy序列.
\end_layout

\begin_layout Proof
则有子列
\begin_inset Formula $\left(f_{n_{k}}\right)_{k\in\NN}$
\end_inset

, 使得对于任意的
\begin_inset Formula $l\ge k$
\end_inset

满足
\begin_inset Formula $\rho\left(f_{n_{k}},f_{n_{l}}\right)<\frac{1}{k}$
\end_inset

.
\end_layout

\begin_layout Proof
仍记子列为
\begin_inset Formula $\left(f_{n}\right)_{n\in\NN}$
\end_inset

, 则有
\begin_inset Formula $\forall m\ge n$
\end_inset

, 
\begin_inset Formula $\rho(f_{m},f_{n})<\frac{1}{n}$
\end_inset

.
\end_layout

\begin_layout Proof
取
\begin_inset Formula 
\begin{align*}
A_{k,m}(\epsilon) & =\left\{ x\in\Omega:\left|f_{k}(x)-f_{m}(x)\right|\ge\epsilon\right\} \\
 & =\left\{ x\in\Omega:\frac{\left|f_{k}-f_{m}\right|}{1+\left|f_{k}-f_{m}\right|}\ge\frac{\epsilon}{1+\epsilon}\right\} ,
\end{align*}

\end_inset

则
\begin_inset Formula 
\[
\frac{\epsilon}{1+\epsilon}\chi_{A_{k,m}(\epsilon)}\le\frac{\left|f_{k}-f_{m}\right|}{1+\left|f_{k}-f_{m}\right|}.
\]

\end_inset

即, 当
\begin_inset Formula $m\ge k$
\end_inset

时, 
\begin_inset Formula 
\[
\mu(A_{k,m}(\epsilon))\le\frac{1+\epsilon}{\epsilon}\int_{\Omega}\frac{\left|f_{k}-f_{m}\right|}{1+\left|f_{k}-f_{m}\right|}\ud\mu=\frac{1+\epsilon}{\epsilon}\rho(f_{k},f_{m})<\frac{1+\epsilon}{\epsilon}\frac{1}{k}.
\]

\end_inset

取
\begin_inset Formula $\epsilon_{n}=\frac{1}{2^{n}}$
\end_inset

, 确定
\begin_inset Formula $k_{n}$
\end_inset

, 使得对于任意的
\begin_inset Formula $m\ge k_{n}$
\end_inset

有
\begin_inset Formula 
\[
\mu\left(A_{k,m}\left(\frac{1}{2^{n}}\right)\right)<\frac{1+\epsilon_{n}}{\epsilon_{n}}\cdot\frac{1}{k_{n}}\le\frac{1}{2^{n}}.
\]

\end_inset

取
\begin_inset Formula $g_{n}=f_{k_{n}}$
\end_inset

, 让
\begin_inset Formula 
\[
E_{n}=\left\{ x\in\Omega:\left|g_{n+1}(x)-g_{n}(x)\right|\ge\frac{1}{2^{n}}\right\} ,\quad F_{n}=\bigcup_{k=n}^{\infty}E_{k}.
\]

\end_inset

则
\begin_inset Formula 
\[
\mu(F_{n})\le\sum_{k=n}^{\infty}\mu(E_{k})<\sum_{k=n}^{\infty}\frac{1}{2^{k}}=2^{1-n}.
\]

\end_inset

故
\begin_inset Formula $F=\cap_{n=1}^{\infty}F_{n}$
\end_inset

, 满足
\begin_inset Formula $\mu(F)=0$
\end_inset

.
\end_layout

\begin_layout Proof
当
\begin_inset Formula $x\not\in F$
\end_inset

时, 则存在
\begin_inset Formula $n$
\end_inset

, 使得对于任意的
\begin_inset Formula $r>n$
\end_inset

, 
\begin_inset Formula $x\not\in E_{r}$
\end_inset

.
 即对于任意的
\begin_inset Formula $r\ge n$
\end_inset

, 
\begin_inset Formula 
\[
\left|g_{r+1}(x)-g_{r}(x)\right|<\frac{1}{2^{r}}.
\]

\end_inset

故可定义
\begin_inset Formula $g:\Omega\to\CC$
\end_inset

如下
\begin_inset Formula 
\[
g(x)=\chi_{\Omega\setminus F}(x)\limsup_{k\to\infty}g_{k}(x),\qquad x\in\Omega.
\]

\end_inset

则
\begin_inset Formula $g(x)\in L^{0}(\Omega)$
\end_inset

, (由定理 1).
\end_layout

\begin_layout Proof
对于
\begin_inset Formula $x\not\in F_{k}$
\end_inset

, 有
\begin_inset Formula $x\not\in F$
\end_inset

.
 从而
\begin_inset Formula $g_{k}(x)\to g(x)$
\end_inset

, 
\begin_inset Formula $k\to\infty$
\end_inset

.
\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Proof
对于任意的
\begin_inset Formula $\epsilon>0$
\end_inset

, 取
\begin_inset Formula $k$
\end_inset

使得
\begin_inset Formula $2^{1-k}\le\epsilon$
\end_inset

, 则对于
\begin_inset Formula $x\not\in F_{k}$
\end_inset

, 
\begin_inset Formula $j\ge k$
\end_inset

, 有
\begin_inset Formula 
\begin{align*}
\left|g_{j}(x)-g(x)\right| & \le\left|g_{j}(x)-g_{l}(x)\right|+\left|g_{l}(x)-g(x)\right|\qquad l>j\\
 & \le2^{1-j}+0\qquad l\to\infty.\\
 & \le2^{1-k}.
\end{align*}

\end_inset

从而
\begin_inset Formula 
\begin{align*}
\mu\left(\left\{ x\in\Omega:\left|g_{k}(x)-g(x)\right|\ge\epsilon\right\} \right) & \le\mu(F_{k})+\mu\left(\left\{ x\in\Omega\setminus F_{k}:\left|g_{k}(x)-g(x)\right|\ge\epsilon\right\} \right)\\
 & \le2^{1-k}+\mu(\emptyset)\\
 & \le\epsilon.
\end{align*}

\end_inset

故
\begin_inset Formula $g_{k}\tom g$
\end_inset

.
\end_layout

\begin_layout Subsection
一致可积性
\end_layout

\begin_layout Standard
设
\begin_inset Formula $\left(\Omega,\Sigma,\mu\right)$
\end_inset

为概率空间, 
\begin_inset Formula $L^{1}(\mu)$
\end_inset

中的子集
\begin_inset Formula $\mathscr{F}$
\end_inset

称为是一致可积的, 若对于任意的
\begin_inset Formula $\epsilon>0$
\end_inset

, 存在
\begin_inset Formula $\delta>0$
\end_inset

, s.t.
 
\begin_inset Formula $\forall E\in\Sigma$
\end_inset

满足
\begin_inset Formula $\mu(E)\le\delta$
\end_inset

, 且
\begin_inset Formula $\forall f\in\mathscr{F}$
\end_inset

, 有
\begin_inset Formula 
\[
\int_{E}\left|f\right|\ud\mu\le\epsilon.
\]

\end_inset

也即, 称
\begin_inset Formula $\mathscr{F}$
\end_inset

是一致可积的, 如果
\begin_inset Formula 
\[
\lim_{\mu(E)\to0}\sup_{f\in\mathscr{F}}\int_{E}\left|f\right|\ud\mu=0.
\]

\end_inset


\end_layout

\begin_layout Theorem
假设
\begin_inset Formula $\mathscr{F}$
\end_inset

是
\begin_inset Formula $L^{1}(\mu)$
\end_inset

中的有界子集, 则以下命题等价:
\end_layout

\begin_layout Theorem
1).
 
\begin_inset Formula $\mathscr{F}$
\end_inset

是一致可积的.
\end_layout

\begin_layout Theorem
2).
 
\begin_inset Formula 
\[
\lim_{C\to\infty}\sup_{f\in\mathscr{F}}\int_{\left\{ \left|f\right|>C\right\} }\left|f\right|\ud\mu=0.
\]

\end_inset


\end_layout

\begin_layout Proof
1)
\begin_inset Formula $\Longrightarrow$
\end_inset

2).
 取
\begin_inset Formula 
\[
K=\sup_{f\in\mathscr{F}}\norm{f}_{L^{1}}<\infty.
\]

\end_inset


\begin_inset Formula $\mathscr{F}$
\end_inset

一致可积, 由Chebyshev不等式, 有
\begin_inset Formula 
\[
\mu\left(\left\{ \left|f\right|>M\right\} \right)\le\frac{\norm{f}_{L^{1}}}{M}\le\frac{K}{M}.
\]

\end_inset

由于
\begin_inset Formula 
\[
\lim_{M\to\infty}\mu\left(\left\{ \left|f\right|>M\right\} \right)=0.
\]

\end_inset


\begin_inset Formula $\mathscr{F}$
\end_inset

一致可积.
 即得.
\end_layout

\begin_layout Proof
2)
\begin_inset Formula $\Longrightarrow$
\end_inset

1).
 假设
\begin_inset Formula 
\[
\lim_{M\to\infty}\sup_{f\in\mathscr{F}}\int_{\left\{ \left|f\right|>M\right\} }\left|f\right|\ud\mu=0.
\]

\end_inset


\end_layout

\begin_layout Proof
对于
\begin_inset Formula $E\in\Sigma$
\end_inset

, 
\begin_inset Formula $f\in\mathscr{F}$
\end_inset

.
 当
\begin_inset Formula $M>0$
\end_inset

时, 
\begin_inset Formula 
\begin{align*}
\int_{E}\left|f\right|\ud\mu & =\int_{E\cap\left\{ \left|f\right|\le M\right\} }\left|f\right|\ud\mu+\int_{E\cap\left\{ \left|f\right|>M\right\} }\left|f\right|\ud\mu\\
 & \le M\mu(E)+\sup_{f\in\mathscr{F}}\int_{\left\{ \left|f\right|>M\right\} }\left|f\right|\ud\mu.
\end{align*}

\end_inset

故
\begin_inset Formula 
\[
\sup_{f\in\mathscr{F}}\int_{E}\left|f\right|\ud\mu\le M\mu(E)+\sup_{f\in\mathscr{F}}\int_{\left\{ \left|f\right|>M\right\} }\left|f\right|\ud\mu.
\]

\end_inset


\end_layout

\begin_layout Proof
对于任意的
\begin_inset Formula $\epsilon>0$
\end_inset

, 则有
\begin_inset Formula $M$
\end_inset

使得
\begin_inset Formula 
\[
\sup_{f\in\mathscr{F}}\int_{\left\{ \left|f\right|>M\right\} }\left|f\right|\ud\mu<\frac{\epsilon}{2},
\]

\end_inset

再取
\begin_inset Formula $\delta=\frac{\epsilon}{2M}$
\end_inset

, 则对于任意的
\begin_inset Formula $E\in\Sigma$
\end_inset

, 满足
\begin_inset Formula $\mu(E)\le\delta$
\end_inset

, 有
\begin_inset Formula 
\[
\sup_{f\in\mathscr{F}}\int_{E}\left|f\right|\ud\mu\le\frac{\epsilon}{2}+\frac{\epsilon}{2}=\epsilon,
\]

\end_inset

即
\begin_inset Formula $\mathscr{F}$
\end_inset

一致可积.
\end_layout

\begin_layout Theorem
(Lebesgue积分的绝对连续性).
 假设
\begin_inset Formula $f\in L^{1}(\mu)$
\end_inset

, 则
\begin_inset Formula $\forall\epsilon>0$
\end_inset

, 
\begin_inset Formula $\exists\delta>0$
\end_inset

, s.t.
 
\begin_inset Formula $\forall E\in\Sigma$
\end_inset

, 并满足
\begin_inset Formula $\mu(E)\le\delta$
\end_inset

, 便有
\begin_inset Formula 
\[
\int_{E}\left|f\right|\ud\mu\le\epsilon.
\]

\end_inset


\end_layout

\begin_layout Proof
定义
\end_layout

\begin_layout Section
弱
\begin_inset Formula $L^{p}$
\end_inset

空间
\end_layout

\begin_layout Theorem
(弱
\begin_inset Formula $L^{p}$
\end_inset

空间) 设
\begin_inset Formula $u:\TT^{d}\to\RR$
\end_inset

为可测函数.
 对于任意的
\begin_inset Formula $1\le p<\infty$
\end_inset

, 
\begin_inset Formula 
\[
\vertiii{u}_{M^{p}}^{p}=\sup_{\lambda>0}\left\{ \lambda^{p}\left|\left\{ x\in\TT^{d}:\left|u(x)\right|>\lambda\right\} \right|\right\} ,
\]

\end_inset

定义
\begin_inset Formula 
\[
M^{p}(\TT^{d})\coloneqq\left\{ u:\TT^{d}\to\RR\mid\vertiii{u}_{M^{p}}<\infty\right\} ,\qquad1\le p<\infty.
\]

\end_inset


\begin_inset Formula 
\[
M^{\infty}(\TT^{d})\coloneqq L^{\infty}(\TT^{d}),\qquad p=\infty.
\]

\end_inset


\end_layout

\begin_layout Problem
\begin_inset Formula $\vertiii{\cdot}_{M^{p}}$
\end_inset

不满足次可加性的例.
\end_layout

\begin_layout Section
一致可加性
\end_layout

\begin_layout Lemma
(一致可积的充要条件) 设
\begin_inset Formula $\left(\phi_{i}\right)_{i\in I}\subseteq L^{1}(\TT^{d})$
\end_inset

有界, 则
\begin_inset Formula $\left(\phi_{i}\right)_{i\in I}$
\end_inset

一致可积, iff, 对于任意的
\begin_inset Formula $r\in\left[1,\infty\right]$
\end_inset

, 
\begin_inset Formula $\epsilon>0$
\end_inset

, 存在
\begin_inset Formula $\left(g_{i}^{1}\right)_{i\in I}\subseteq L^{1}(\TT^{d})$
\end_inset

, 
\begin_inset Formula $\left(g_{i}^{2}\right)_{i\in I}\subseteq L^{r}(\TT^{d})$
\end_inset

, 常数
\begin_inset Formula $C_{\epsilon}>0$
\end_inset

, 使得
\begin_inset Formula 
\[
\phi_{i}=g_{i}^{1}+g_{i}^{2},\quad\sup_{i\in I}\norm{g_{i}^{1}}_{L^{1}}\le\epsilon,\quad\sup_{i\in I}\norm{g_{i}^{2}}_{L^{r}}\le C_{\epsilon}.
\]

\end_inset


\end_layout

\begin_layout Proof
\begin_inset Formula $\Longrightarrow$
\end_inset

: 由
\begin_inset Formula $\phi_{i}\in L^{1}(\TT^{d})$
\end_inset

有界, 记
\begin_inset Formula 
\[
\sup_{i}\norm{\phi_{i}}_{L^{1}}\le C,
\]

\end_inset

则对于任意的
\begin_inset Formula $\epsilon>0$
\end_inset

, 
\begin_inset Formula $\delta>0$
\end_inset

.
 记
\begin_inset Formula 
\[
A_{\delta}^{i}\coloneqq\left\{ x\in\TT^{d}:\left|\phi_{i}(x)\right|>\frac{C}{\delta}\right\} ,
\]

\end_inset

则有
\begin_inset Formula 
\[
\frac{\delta}{C}\norm{\phi_{i}}_{L^{1}}=\frac{\delta}{C}\int_{\TT^{d}}\left|\phi_{i}\right|\ud x>\frac{\delta}{C}\int_{A_{\delta}^{i}}\left|\phi_{i}\right|\ud x>\int_{A_{\delta}^{i}}1\ud x=\left|A_{\delta}^{i}\right|.
\]

\end_inset

故
\begin_inset Formula 
\[
\sup_{i}\left|A_{\delta}^{i}\right|\le\sup_{i}\frac{\delta}{C}\norm{\phi_{i}}_{L^{1}}\le\delta.
\]

\end_inset

由
\begin_inset Formula $\left(\phi_{i}\right)$
\end_inset

一致可积, 取
\begin_inset Formula $\delta(\epsilon)$
\end_inset

使
\begin_inset Formula $\sup_{i}\int_{A_{\delta}^{i}}\left|\phi_{i}\right|\ud x\le\epsilon$
\end_inset

.
 取
\begin_inset Formula 
\[
g_{i}^{1}\coloneqq\phi_{i}\chi_{A_{\delta}^{i}}\Longrightarrow\sup_{i}\norm{g_{i}^{1}}_{L^{1}}\le\epsilon.
\]

\end_inset

取
\begin_inset Formula 
\[
g_{i}^{2}\coloneqq\phi_{i}(1-\chi_{A_{\delta}^{i}})\Longrightarrow\norm{g_{i}^{2}}\le\left(\int_{\left(A_{\delta}^{i}\right)^{c}}\left(\frac{C}{\delta}\right)^{r}\ud x\right)^{1/r}\le\frac{C}{\delta(\epsilon)}\cdot\left|\TT^{d}\right|^{1/r}\le C_{\epsilon}.
\]

\end_inset


\end_layout

\begin_layout Proof
\begin_inset Formula $\Longleftarrow$
\end_inset

: 已知对于任意的
\begin_inset Formula $r\in\left[1,\infty\right]$
\end_inset

, 
\begin_inset Formula $\epsilon>0$
\end_inset

, 有分解
\begin_inset Formula $\phi_{i}=g_{i}^{1}+g_{i}^{2}$
\end_inset

, 
\begin_inset Formula $i\in I$
\end_inset

.
\begin_inset Formula 
\[
\norm{g_{i}^{1}}_{L^{1}}\le\frac{\epsilon}{2},\qquad\norm{g_{i}^{2}}_{L^{r}}\le\frac{\epsilon}{2}.
\]

\end_inset

取
\begin_inset Formula $\delta=\left(\frac{\epsilon}{2C_{\epsilon}}\right)^{r'}$
\end_inset

, 则对于任意的
\begin_inset Formula $A\subseteq\TT^{d}$
\end_inset

, 使
\begin_inset Formula $\left|A\right|\le\delta$
\end_inset

, 有
\begin_inset Formula 
\begin{align*}
\norm{\phi_{i}}_{L^{1}(A)} & =\int_{A}\left|\phi_{i}\right|\ud x\\
 & \le\int_{A}\left|g_{i}^{1}\right|\ud x+\int_{A}\left|g_{i}^{2}\right|\ud x\\
 & \le\frac{\epsilon}{2}+\norm{g_{i}^{2}}_{L^{r}(A)}\cdot\norm{1}_{L^{r'}(A)}\\
 & \le\frac{\epsilon}{2}+C_{\epsilon}\cdot\left(\frac{\epsilon}{2C_{\epsilon}}\right)^{r'\cdot\frac{1}{r'}}=\epsilon.
\end{align*}

\end_inset


\end_layout

\begin_layout Section
对流耗散方程中的结论
\end_layout

\begin_layout Definition
(对流耗散方程的分布解) 设
\begin_inset Formula $b\in L^{1}\left(\left(0,T\right);L^{p}(\TT^{d})\right)$
\end_inset

是div-free向量场, 
\begin_inset Formula $u_{0}\in L^{q}(\TT^{d})$
\end_inset

, 
\begin_inset Formula $\frac{1}{p}+\frac{1}{q}\le1$
\end_inset

.
 函数
\begin_inset Formula $u\in L^{\infty}\left((0,T);L^{q}(\TT^{d})\right)$
\end_inset

是方程
\begin_inset Formula 
\[
\begin{cases}
\partial_{t}u+\udiv(bu)=\Delta u & \text{ in }(0,T)\times\TT^{d},\\
u(0,\cdot)=u_{0}(\cdot) & \text{ in }\TT^{d}.
\end{cases}
\]

\end_inset

的分布解, 若对于任意的
\begin_inset Formula $\phi\in C_{c}^{\infty}\left([0,T)\times\TT^{d}\right)$
\end_inset

有
\begin_inset Formula 
\[
\int_{0}^{T}\int_{\TT^{d}}u\left(\partial_{t}\phi+b\cdot\nabla\phi+\Delta\phi\right)\ud x\ud t+\int_{\TT^{d}}u_{0}\phi(0,\cdot)\ud x=0.
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Definition
设
\begin_inset Formula $b\in L^{1}\left((0,T);L^{2}(\TT^{d})\right)$
\end_inset

为div-free向量场, 
\begin_inset Formula $u_{0}\in L^{2}(\TT^{d})$
\end_inset

, 称函数
\begin_inset Formula $u\in L^{\infty}\left((0,T);L^{2}(\TT^{d})\right)$
\end_inset

是方程
\begin_inset Formula 
\[
\begin{cases}
\partial_{t}u+\udiv(bu)=\Delta u & \text{ in }(0,T)\times\TT^{d},\\
u(0,\cdot)=u_{0}(\cdot) & \text{ in }\TT^{d}.
\end{cases}
\]

\end_inset

的抛物解(parabolic solution), 如果
\begin_inset Formula $u$
\end_inset

是上述方程的分布解, 且
\begin_inset Formula $u\in L^{2}\left((0,T);H^{1}(\TT^{d})\right)$
\end_inset

.
\end_layout

\begin_layout Proposition
设
\begin_inset Formula $b\in L^{1}\left((0,T);L^{p}(\TT^{d})\right)$
\end_inset

是div-free向量场, 
\begin_inset Formula $u_{0}\in L^{q}(\TT^{d})$
\end_inset

, 
\begin_inset Formula $\frac{1}{p}+\frac{1}{q}\le1$
\end_inset

.
 则方程
\begin_inset Formula 
\[
\begin{cases}
\partial_{t}u+\udiv(bu)=\Delta u & \text{ in }(0,T)\times\TT^{d},\\
u(0,\cdot)=u_{0}(\cdot) & \text{ in }\TT^{d},
\end{cases}
\]

\end_inset

有分布解
\begin_inset Formula $u\in L^{\infty}\left((0,T);L^{q}(\TT^{d})\right)$
\end_inset

.
\end_layout

\begin_layout Proof
(1).
 设
\begin_inset Formula $\left(\rho^{\delta}\right)_{\delta}$
\end_inset

为磨光核, 定义
\begin_inset Formula $b^{\delta}=b*\rho^{\delta}$
\end_inset

, 
\begin_inset Formula $u_{0}^{\delta}=u_{0}*\rho^{\delta}$
\end_inset

, 考虑逼近问题
\begin_inset Formula 
\[
\begin{cases}
\partial_{t}u^{\delta}+\udiv(b^{\delta}u^{\delta})=\Delta u^{\delta}\\
u^{\delta}(0,\cdot)=u_{0}^{\delta}(\cdot)
\end{cases}
\]

\end_inset

这是带有光滑系数, 光滑初值的抛物方程, 有唯一光滑解
\begin_inset Formula $u^{\delta}$
\end_inset

.
 (参考Evans的PDE).
\end_layout

\begin_layout Proof
(2).
 下证
\begin_inset Formula $u^{\delta}\in L^{\infty}\left((0,T);L^{q}(\TT^{d})\right)$
\end_inset

有界.
 在以上方程两边同时乘以
\begin_inset Formula $\beta'(u^{\delta})$
\end_inset

, 其中
\begin_inset Formula $\beta:\RR\to\RR$
\end_inset

为光滑凸函数, 关于空间积分, 有
\begin_inset Formula 
\[
\frac{\ud}{\ud t}\int_{\TT^{d}}\beta\left(u^{\delta}(t,x)\right)\ud x=-\int_{\TT^{d}}\beta''\left(u^{\delta}(t,x)\right)\cdot\left|\nabla u^{\delta}(t,x)\right|^{2}\ud x\le0.
\]

\end_inset

关于
\begin_inset Formula $t$
\end_inset

积分
\begin_inset Formula 
\[
\int_{\TT^{d}}\beta\left(u^{\delta}(t,x)\right)\ud x\le\int_{\TT^{d}}\beta\left(u_{0}^{\delta}(x)\right)\ud x.
\]

\end_inset


\begin_inset Formula $u^{\delta}$
\end_inset

在
\begin_inset Formula $\TT^{d}$
\end_inset

上有界, 取
\begin_inset Formula $\beta\rightrightarrows\left|s\right|^{q}$
\end_inset

, 且
\begin_inset Formula $\beta$
\end_inset

光滑, 凸, 在
\begin_inset Formula $u^{\delta}$
\end_inset

的值域为最小定义域上一致收敛于
\begin_inset Formula $\left|s\right|^{q}$
\end_inset

是做得到的.
 其中
\begin_inset Formula $1<q<\infty$
\end_inset

, 有
\begin_inset Formula 
\[
\norm{u^{\delta}(t,\cdot)}_{L^{q}(\TT^{d})}\le\norm{u_{0}^{\delta}}_{L^{q}(\TT^{d})}\le\norm{u_{0}}_{L^{q}(\TT^{d})}.
\]

\end_inset


\end_layout

\begin_layout Proof
(3).
 
\begin_inset Formula $q>1$
\end_inset

时, 由标准的紧性论证, 有
\begin_inset Formula $\left(u^{\delta}\right)_{\delta}$
\end_inset

的子列弱*收敛于
\begin_inset Formula $u\in L^{\infty}\left((0,T);L^{q}(\TT^{d})\right)$
\end_inset

.
 由于方程是线性方程, 
\begin_inset Formula $u$
\end_inset

是所有方程的分布解.
\end_layout

\begin_layout Proof
(4).
 
\begin_inset Formula $q=\infty$
\end_inset

时, 估计
\begin_inset Formula 
\[
\norm{u^{\delta}(t,\cdot)}_{L^{q}(\TT^{d})}\le\norm{u_{0}}_{L^{q}(\TT^{d})},
\]

\end_inset

对于所有的
\begin_inset Formula $\delta>0$
\end_inset

, 
\begin_inset Formula $q<\infty$
\end_inset

仍成立, 令
\begin_inset Formula $q\to\infty$
\end_inset

即可.
\end_layout

\begin_layout Proof
(5).
 
\begin_inset Formula $q=1$
\end_inset

时, 在
\begin_inset Formula $L^{\infty}\left((0,T);L^{1}(\TT^{d})\right)$
\end_inset

中的紧性由
\begin_inset Formula $\left(u^{\delta}\right)_{\delta}$
\end_inset

的一致可积性判别法给出.
 如Dunford-Pettis, de la Vall
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
'{e}
\end_layout

\end_inset

e-Poussin判别法.
\end_layout

\begin_layout Proposition
设
\begin_inset Formula $b\in L^{1}\left((0,T);L^{2}(\TT^{d})\right)$
\end_inset

为div-free向量场, 
\begin_inset Formula $u_{0}\in L^{2}(\TT^{d})$
\end_inset

, 则至少存在一个抛物解.
\end_layout

\begin_layout Proof
同命题 1 的证明, 考虑逼近问题
\begin_inset Formula 
\[
\begin{cases}
\partial_{t}u^{\delta}+\udiv(b^{\delta}u^{\delta})=\Delta u^{\delta}\\
u^{\delta}(0,\cdot)=u_{0}^{\delta}(\cdot)
\end{cases}
\]

\end_inset

取
\begin_inset Formula $\beta(s)=\frac{s^{2}}{2}$
\end_inset

, 取
\begin_inset Formula $(0,t)$
\end_inset

上的时间积分, 有
\begin_inset Formula 
\[
\frac{1}{2}\int_{\TT^{d}}\left|u^{\delta}(t,x)\right|^{2}\ud x+\int_{0}^{t}\int_{\TT^{d}}\left|\nabla u^{\delta}(s,x)\right|^{2}\ud x\ud s=\frac{1}{2}\int_{\TT^{d}}\left|u_{0}^{\delta}(x)\right|^{2}\ud x.
\]

\end_inset

故
\begin_inset Formula $\nabla u^{\delta}\wc w$
\end_inset

 in 
\begin_inset Formula $L^{2}\left((0,T);L^{2}(\TT^{d})\right)$
\end_inset

, 而
\begin_inset Formula $u^{\delta}\wcs u$
\end_inset

 in 
\begin_inset Formula $L^{\infty}\left((0,T);L^{2}(\TT^{d})\right)$
\end_inset

.
 
\end_layout

\begin_layout Proof
从而
\begin_inset Formula $\nabla u=w$
\end_inset

, 即
\begin_inset Formula $u^{\delta}\wc u$
\end_inset

 in 
\begin_inset Formula $L^{2}H^{1}$
\end_inset

.
\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Standard
注意: 
\begin_inset Formula $\left(u^{\delta}\right)_{\delta}$
\end_inset

满足以下先验估计:
\end_layout

\begin_layout Standard
(E1).
 
\begin_inset Formula 
\[
\sup_{t\in\left(0,T\right)}\norm{u^{\delta}}_{L^{q}}\le C\norm{u_{0}}_{L^{q}},\qquad\text{ if }u_{0}\in L^{q}(\TT^{d}).
\]

\end_inset


\end_layout

\begin_layout Standard
(E2).
 
\begin_inset Formula 
\[
\int_{0}^{T}\left|\nabla u^{\delta}(t,\cdot)\right|_{L^{2}}\ud t\le C\left|u_{0}\right|_{L^{2}},\qquad\text{ if }u_{0}\in L^{2}(\TT^{d}).
\]

\end_inset


\end_layout

