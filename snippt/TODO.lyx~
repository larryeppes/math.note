\begin_layout Standard
\begin_inset Formula $y=x^{\sqrt{x}}$
\end_inset

, 
\begin_inset Formula $\ln y=\sqrt{x}\ln x$
\end_inset

, 两边同时求导(
\begin_inset Formula $\frac{d}{dx}\ln y=\frac{d\ln y}{dy}\cdot\frac{dy}{dx}=\frac{1}{y}\cdot y'$
\end_inset

), 
\begin_inset Formula $\frac{y'}{y}=\frac{1}{2\sqrt{x}}\ln x+\sqrt{x}\cdot\frac{1}{x}=\frac{\ln x}{2\sqrt{x}}+\frac{1}{\sqrt{x}}$
\end_inset

, 所以
\begin_inset Formula $y'=\left(\frac{\ln x}{2\sqrt{x}}+\frac{1}{\sqrt{x}}\right)y$
\end_inset

, 代入
\begin_inset Formula $y$
\end_inset

自己化简.
\end_layout

\begin_layout Standard
\begin_inset Formula $y=\frac{\left(x-2\right)\sqrt[5]{x-1}}{\left(x+3\right)\ue^{x}}$
\end_inset

, 
\begin_inset Formula $\ln y=\ln\left(x-2\right)+\frac{1}{5}\ln\left(x-1\right)-\ln\left(x+3\right)-x$
\end_inset

, 两边同时求导, 
\begin_inset Formula $\frac{y'}{y}=\frac{1}{x-2}+\frac{1}{5\left(x-1\right)}-\frac{1}{x+3}-1$
\end_inset

, 方法同上, 自己化简.
\end_layout

