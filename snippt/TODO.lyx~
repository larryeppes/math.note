\begin_layout Standard
由组合恒等式:
\begin_inset Formula 
\[
\sum_{k=1}^{\infty}\frac{2^{k-1}H_{k-1}^{(2)}}{k\binom{2k}{k}}=\frac{\pi^{3}}{96}=\int_{-1}^{1}\frac{\arctan x}{1+x}\ln\left(\frac{1+x^{2}}{2}\right)\ud x
\]

\end_inset

提示: 
\begin_inset Formula $Li_{3}\left(x\right)=\sum_{n=1}^{\infty}\frac{x^{n}}{n^{2}}$
\end_inset

, 
\begin_inset Formula $\left|x\right|<1$
\end_inset

和Beta函数.
\begin_inset Formula 
\[
\sum_{k=1}^{\infty}\frac{\left(10k-3\right)8^{k}}{\binom{3k}{k}\binom{2k}{k}^{2}k^{3}}=\frac{\pi^{2}}{2},\qquad\sum_{k=1}^{\infty}\frac{\left(35k-8\right)81^{k}}{\binom{4k}{2k}\binom{2k}{k}^{2}k^{3}}=12\pi^{2}.
\]

\end_inset


\begin_inset Formula 
\[
\sum_{n=0}^{\infty}\left(\frac{\left(81n+32\right)8^{n}}{49^{n}}\sum_{k=0}^{n}\binom{2k}{k}\binom{2\left(n-k\right)}{n-k}\binom{-\frac{1}{4}}{k}\binom{-\frac{3}{4}}{n-k}\right)=\frac{14\sqrt{7}}{\pi}.
\]

\end_inset


\begin_inset Formula 
\[
\sum_{n=0}^{\infty}\left(\frac{357n+103}{2160^{n}}\binom{2n}{n}\sum_{k=0}^{n}\binom{n}{k}\binom{n+2k}{2k}\binom{2k}{k}\left(-324\right)^{n-k}\right)=\frac{90}{\pi}.
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\int_{0}^{1}\frac{x\arctan x}{1+x^{2}}\ln\left(1-x^{2}\right)\ud x=-\frac{\pi^{3}}{48}-\frac{\pi}{8}\ln2+Catalan\times\ln2;
\]

\end_inset


\begin_inset Formula 
\[
\int_{0}^{1}\frac{\ln\left(1-x^{2}\right)}{1+x^{2}}\ln\left(\frac{1+x^{2}}{2}\right)\ud x=\frac{\pi}{4}\ln^{2}2+\frac{\pi^{3}}{32}-2Catalan\times\ln2;
\]

\end_inset


