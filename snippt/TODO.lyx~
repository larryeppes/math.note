\[
\int_{-1}^{1}\frac{\arctan x}{1+x}\ln\left(\frac{1+x^{2}}{2}\right)\ud x=-\int_{0}^{1}\frac{\ln\left(1-x^{2}\right)}{1+x^{2}}\ln\left(\frac{1+x^{2}}{2}\right)\ud x-2\int_{0}^{1}\frac{x\arctan x}{1+x^{2}}\ln\left(1-x^{2}\right)\ud x;
\]

\end_inset


