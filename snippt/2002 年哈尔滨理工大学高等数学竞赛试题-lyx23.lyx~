\begin_body

\begin_layout Title
2002 年哈尔滨理工大学高等数学竞赛试题
\end_layout

\begin_layout Standard
一.
 填空 (每小题 4 分,
 共计 32 分)
\end_layout

\begin_layout Standard
1.
 已知 
\begin_inset Formula $f(x)$
\end_inset

 在 
\begin_inset Formula $\left(-\infty,+\infty\right)$
\end_inset

 内可导,
 且 
\begin_inset Formula $\lim\limits_{x\to\infty}f'(x)=\ue^{2}$
\end_inset

,
\begin_inset Formula 
\[
\lim_{x\to\infty}\left(\frac{x+a}{x-a}\right)^{x}=\lim_{x\to\infty}\left(f(x)-f(x-1)\right),
\]

\end_inset

则 
\begin_inset Formula $a=\kong$
\end_inset

.
\end_layout

\begin_layout Standard
2.
 设函数 
\begin_inset Formula $y=y(x)$
\end_inset

 是由 
\begin_inset Formula $x^{3}+y^{3}-3axy=0$
\end_inset

,
 (
\begin_inset Formula $a>0$
\end_inset

),
 确定,
 则
\begin_inset Formula 
\[
\lim_{x\to+\infty}\frac{y}{x}=\kong.
\]

\end_inset


\end_layout

\begin_layout Standard
3.
 设圆锥面的顶点在原点,
 且三个坐标轴的正半轴都在其上,
 则圆锥面的方程
\end_layout

\begin_layout Standard
为
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
kong.
\end_layout

\end_inset


\end_layout

\begin_layout Standard
4.
 已知 
\begin_inset Formula $y''+(x+\ue^{2y})\left(y'\right)^{3}=0$
\end_inset

,
 则方程的通解为
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
kong.
\end_layout

\end_inset


\end_layout

\begin_layout Standard
5.
 已知级数 
\begin_inset Formula $\sum\limits_{n=1}^{\infty}u_{n}$
\end_inset

 的一般项 
\begin_inset Formula $u_{n}$
\end_inset

 与前 
\begin_inset Formula $n$
\end_inset

 项的和 
\begin_inset Formula $s_{n}$
\end_inset

 有如下关系:
\begin_inset Formula 
\[
2s_{n}^{2}=2u_{n}s_{n}-u_{n},\quad(n\ge2),\ u_{1}=2,
\]

\end_inset

则级数 
\begin_inset Formula $\sum\limits_{n=1}^{\infty}u_{n}=\kong$
\end_inset

.
\end_layout

\begin_layout Standard
6.
 设 
\begin_inset Formula $f(x)=\sum\limits_{n=1}^{\infty}\frac{x^{n}}{n^{2}}$
\end_inset

,
 (
\begin_inset Formula $0\le x\le1$
\end_inset

),
 则 
\begin_inset Formula $f(x)+f(1-x)+\ln x\cdot\ln(1-x)=\kong$
\end_inset

.
\end_layout

\begin_layout Standard
7.
 
\begin_inset Formula 
\[
z=\sqrt{x^{2}+y^{2}-2x-4y+9}+\sqrt{x^{2}+y^{2}-6x+2y+11}
\]

\end_inset

的最小值为
\begin_inset ERT
status open

\begin_layout Plain Layout


\backslash
kong.
\end_layout

\end_inset


\end_layout

\begin_layout Standard
8.
 设 
\begin_inset Formula $\Omega$
\end_inset

 是由 
\begin_inset Formula $z=xy$
\end_inset

,
 
\begin_inset Formula $x+y+z=1$
\end_inset

 与 
\begin_inset Formula $z=0$
\end_inset

 围成的区域,
 则
\begin_inset Formula 
\[
\iiint_{\Omega}x\ud V=\kong.
\]

\end_inset


\end_layout

\end_body
